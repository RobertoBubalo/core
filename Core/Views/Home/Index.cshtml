@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees";
}

    <div class="card-deck">
        @foreach (var employee in Model)
        {
            var photoPath = "~/images/" + (employee.Imagepath ?? "noimage.png");
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                @* TODO: Sort out the image scaling, keep aspect ratio *@
                <img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" />
                <div class="card-footer text-center">
                    <a class="btn btn-primary m-1" asp-controller="home" asp-action="details" asp-route-id="@employee.Id">View</a>
                    <a href="#" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>